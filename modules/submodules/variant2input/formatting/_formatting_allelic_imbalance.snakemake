rule remove_header_ai:
    input:
        lambda wildcards: config['data'][wildcards.data]['name']
    output:
        temp('data/{data}_noheader')
    shell:
        '''zcat {input[0]} |tail -n +2 > {output[0]}'''

rule generate_output_ai:
    input:
        'data/{data}_noheader'
    output:
        'data/{data}.formatted'
    shell:
        '''cat {input[0]} | \
awk -F"\\t" '{{print $3"\\t"$4-1"\\t"$4"\\t"NR":"$5":"$21":"$1"\\t"$9"\\t"$9}}' \
> {output[0]}'''
